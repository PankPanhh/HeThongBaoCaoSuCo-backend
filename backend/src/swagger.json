{
  "openapi": "3.0.1",
  "info": {
    "title": "Incident Management API",
    "version": "1.0.0",
    "description": "Minimal OpenAPI spec for testing the backend API endpoints"
  },
  "servers": [
    {
      "url": "http://localhost:3001",
      "description": "Local development server"
    }
  ],
  "paths": {
    "/api/incidents": {
      "get": {
        "summary": "Get all incidents",
        "responses": {
          "200": {
            "description": "A list of incidents",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object"
                }
              }
            }
          }
        }
      }
    },
    "/api/incidents/quick-report": {
      "post": {
        "summary": "Quick report (create incident)",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object"
              }
            }
          }
        },
        "responses": {
          "201": { "description": "Created" }
        }
      }
    },
    "/api/incidents/upload-image": {
      "post": {
        "summary": "Upload image for an incident",
        "requestBody": {
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "file": {
                    "type": "string",
                    "format": "binary"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Upload successful" }
        }
      }
    },
    "/api/incidents/{id}": {
      "get": {
        "summary": "Get incident by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": { "description": "Incident object" },
          "404": { "description": "Not found" }
        }
      }
    },
    "/api/health": {
      "get": {
        "summary": "Health check",
        "responses": {
          "200": { "description": "OK" }
        }
      }
    }
  }
}
